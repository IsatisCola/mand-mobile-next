{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "listFiles": true,
    "module": "ESNext",
    "target": "ESNext",
    "noImplicitAny": false,
    "allowJs": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["node"],
    "outDir": "lib"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
  ]
}
