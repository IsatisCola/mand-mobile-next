{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "listFiles": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["node", "jest"],
    "target": "es6",
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
