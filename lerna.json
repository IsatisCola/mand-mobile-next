{
  "lerna": "3.16.1",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "version": "3.0.1-alpha.4",
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "release_*",
        "release"
      ],
      "ignoreChanges": [
        "*.md",
        "lerna.json"
      ]
    },
    "npmClientArgs": [
      "--no-package-lock"
    ]
  }
}
